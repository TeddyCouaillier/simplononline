        {{ template.confirm() }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _training_course_user_trainingCourse_entry_row %}
{{ form_widget(form) }}
{% endblock %}

{% block _training_course_user_trainingCourse_entry_widget %}
<div class="container-white mb-2 trainings" id="block_{{id}}">
    <div class="row my-1 user-add-training">

        <div class="input-group col-md-4 col-sm-12 my-1">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tie"></i></span>
            </div>
            {{ form_widget(form.society) }}
        </div>
        <div class="input-group col-md-4 col-sm-12 my-1">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            {{ form_widget(form.place) }}
        </div>

        <div class="col-md-4 col-sm-12 my-1">{{ form_widget(form.status) }}</div>
    </div>
    <div>
        <div class="text-center">
            <span class="text-grey training-project-toggle pointer">GÃ©rer la description <i class="far fa-chevron-down chevron"></i></span>
        </div>
        <div class="p-2 training-project">
            {{ form_widget(form.project) }}
        </div>
    </div>
</div>
{% endblock %}

{% block modal %}{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.training').collection({
            'up': '<a href="#" aria-label="Remonter" class="mx-1"><i class="fal fa-chevron-circle-up"></i></a>',
            'down': '<a href="#" aria-label="Redescendre" class="mx-1"><i class="fal fa-chevron-circle-down"></i></a>',
            'remove': '<a href="#" aria-label="Supprimer" class="mx-1 text-red"><i class="fal fa-times-circle"></i></a>',
            'add': '<button class="bg-white button-circle text-grey mx-auto d-block mt-4" aria-label="Ajouter"><i class="fal fa-plus"></i></button>',
            'add_at_the_end': true
        });
    </script>
{% endblock %}
