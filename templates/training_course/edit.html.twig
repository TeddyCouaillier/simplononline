{% extends 'base.html.twig' %}

{% import 'macro.html.twig' as template %}

{% block title %}Liste des stages de {{ user.firstname }} {{ user.lastname|upper }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/training.css">
{% endblock %}

{% form_theme form _self 'jquery.collection.html.twig' %}

{% block body %}
    <h1>Liste des stages de {{ user.firstname }} {{ user.lastname|upper }}</em></h1>
    <hr>
    <div class="bg-grey rounded p-2">
        <span class="bold">Etat des stages</span>
        {{ form_start(form) }}
        {{ form_row(form.trainingCourse) }}
        {{ template.confirm() }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _training_course_user_trainingCourse_entry_row %}
{{ form_widget(form) }}
{% endblock %}

{% block _training_course_user_trainingCourse_entry_widget %}
<div class="bg-white p-2 mb-2 rounded trainings" id="block_{{id}}">
    <div class="flex just-around my-1 user-add-training">

        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tie"></i></span>
            </div>
            {{ form_widget(form.society) }}
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            {{ form_widget(form.place) }}
        </div>

        {% set status = form.status.vars.value %}
        {% if status == "Intéressé(e)" %}
        {% set status = "edit-status-yellow" %}
        {% elseif status == "Entretien" %}
        {% set status = "edit-status-purple" %}
        {% elseif status == "Réponse positive" %}
        {% set status = "edit-status-green" %}
        {% elseif status == "Réponse négative" %}
        {% set status = "edit-status-red" %}
        {% elseif status == "En attente de réponse" %}
        {% set status = "edit-status-blue" %}
        {% else %}
        {% set status = "" %}
        {% endif %}

        <div>{{ form_widget(form.status, {'attr': {'class': status,'onchange': 'changeStatus(this)'}}) }}</div>

    </div>
    <div>
        <div class="text-center">
            <span class="text-grey training-project-toggle">Gérer la description <i class="far fa-chevron-down chevron"></i></span>
        </div>
        <div class="p-2 training-project">
            {{ form_widget(form.project) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.training').collection({
            'up': '<a href="#" class="mx-1"><i class="fal fa-chevron-circle-up"></i></a>',
            'down': '<a href="#" class="mx-1"><i class="fal fa-chevron-circle-down"></i></a>',
            'remove': '<a href="#" class="mx-1 text-red"><i class="fal fa-times-circle"></i></a>',
            'add': '<button class="bg-white button-circle text-grey mx-auto d-block mt-4"><i class="fal fa-plus"></i></button>',
            'add_at_the_end': true
        });
    </script>
{% endblock %}
