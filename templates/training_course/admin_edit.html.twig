{% extends 'base.html.twig' %}

{% import 'macro.html.twig' as template %}

{% block title %}Liste des stages à proposer{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/training.css">
{% endblock %}

{% form_theme form _self 'jquery.collection.html.twig' %}

{% block body %}
    <h1>Liste des stages à proposer</em></h1>
    <hr>
    <div class="bg-grey rounded p-2">
        <span class="bold">Etat des stages</span>
        {{ form_start(form) }}
        {{ form_row(form.trainingCourse) }}
        {{ template.confirm() }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _admin_training_course_user_trainingCourse_entry_row %}
{{ form_widget(form) }}
{% endblock %}

{% block _admin_training_course_user_trainingCourse_entry_widget %}
<div class="bg-white p-2 mb-2 rounded trainings">
    <div class="flex just-around my-1 user-add-training-admin">

        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tie"></i></span>
            </div>
            {{ form_widget(form.society) }}
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            {{ form_widget(form.place) }}
        </div>
        <div>{{ form_widget(form.number, {'attr':{'data-toggle':'tooltip','data-placement':'top','title':'Nombre de stagiaires'}}) }}</div>

    </div>
    <div>
        <div class="text-center">
            <span class="text-grey training-project-toggle">Gérer la description <i class="far fa-chevron-down chevron"></i></span>
        </div>
        <div class="p-2 training-project">
            {{ form_widget(form.project) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.training').collection({
            'up': '<a href="#" class="mx-1"><i class="fal fa-chevron-circle-up"></i></a>',
            'down': '<a href="#" class="mx-1"><i class="fal fa-chevron-circle-down"></i></a>',
            'remove': '<a href="#" class="mx-1 text-red"><i class="fal fa-times-circle"></i></a>',
            'add': '<button class="bg-white button-circle text-grey mx-auto d-block mt-4"><i class="fal fa-plus"></i></button>',
            'add_at_the_end': true
        });
    </script>
{% endblock %}
