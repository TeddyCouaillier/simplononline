{% block _training_course_user_trainingCourse_widget %}
{{ form_widget(form) }}
<div class="text-center">
    <input type="hidden" id="widgets-counter" value="0">
    <button type="button" id="add-training" class="bg-white button-circle text-grey my-2 mx-auto"> <i class="fal fa-plus"></i> </button>
</div>
{% endblock %}

{% block _training_course_user_trainingCourse_entry_row %}
{{ form_widget(form) }}
{% endblock %}

{% block _training_course_user_trainingCourse_entry_widget %}
<div class="container-white mb-2 trainings" id="block_{{id}}">
    <div class="row my-1 user-add-training">

        <div class="input-group col-md-4">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tie"></i></span>
            </div>
            {{ form_widget(form.society) }}
        </div>
        <div class="input-group col-md-4">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            {{ form_widget(form.place) }}
        </div>

        {% set status = form.status.vars.value %}
        {% if status == "Intéressé(e)" %}
        {% set status = "edit-status-yellow" %}
        {% elseif status == "Entretien" %}
        {% set status = "edit-status-purple" %}
        {% elseif status == "Réponse positive" %}
        {% set status = "edit-status-green" %}
        {% elseif status == "Réponse négative" %}
        {% set status = "edit-status-red" %}
        {% elseif status == "En attente de réponse" %}
        {% set status = "edit-status-blue" %}
        {% else %}
        {% set status = "" %}
        {% endif %}

        <div class="col-md-4">{{ form_widget(form.status, {'attr': {'class': status,'onchange': 'changeStatus(this)'}}) }}</div>

    </div>
    <div>
        <div class="text-center">
            <span class="text-grey training-project-toggle pointer">Gérer la description <i class="far fa-chevron-down chevron"></i></span>
        </div>
        <div class="p-2 training-project">
            {{ form_widget(form.project) }}
        </div>
    </div>
</div>
{% endblock %}
