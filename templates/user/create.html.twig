{% extends 'base.html.twig' %}
{% import 'macro.html.twig' as template %}
{% block title %}Ajouter un utilisateur{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/user.css">
{% endblock %}

{% block body %}
    {{ template.checkMessage(form) }}
    <h1>Ajouter un utilisateur</h1>
    <hr>
    {{ form_start(form) }}

    <div class="grid-user">
        <div class="grid-user-info bg-grey rounded">
            <span class="bold">Informations personnelles</span>
            <div class="d-flex justify-content-around text-center mt-2 form-add-user-info">
                <div>
                    {{ form_label(form.firstname) }}<br>
                    {{ form_widget(form.firstname) }}
                </div>
                <div>
                    {{ form_label(form.lastname) }}<br>
                    {{ form_widget(form.lastname) }}
                </div>
                <div>
                    {{ form_label(form.email) }}<br>
                    {{ form_widget(form.email) }}
                </div>
            </div>
        </div>

        <div class="grid-user-promo bg-grey rounded">
            <span class="bold mt-2">Information de connexion</span>
            <div class="mt-2">
                {{ form_widget(form.password) }}
            </div>
        </div>

        <div class="grid-user-supp bg-grey rounded">
            <span class="bold">Promotion</span>
            <div class="mt-2">
                {{ form_widget(form.promotion) }}
            </div>
        </div>
    </div>

    {{ template.btnConfirm }}

    {{ form_end(form) }}
{% endblock %}
