{% extends 'base.html.twig' %}

{% import 'macro.html.twig' as template %}

{% block title %}Toutes les promotions{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/promo.css">
{% endblock %}

{% block body %}
    <h1>Liste des promotions</h1>
    <hr>
    <div class="flex wrap just-around">
        {% for promo in promos | reverse %}
            <div class="bg-white shadow-small text-center mb-3 p-1 w-33 all-promo">
                {% if promo.current %}
                    <div class="position-absolute">
                        <div class="bg-red text-white text-uppercase bold py-2 px-3">
                            En cours
                        </div>
                    </div>
                {% endif %}
                <div class="mt-3 mb-1 p-4">
                    <a href="{{ path('promo_show',{'slug': promo.slug}) }}">
                        <h2 class="rhover">{{ promo.label }}</h2>
                        <ul>
                            <li>Formateur :
                                <em>
                                {% for former in promo.formers %}
                                    {{ former.fullname }} &nbsp;
                                {% else %}
                                    Aucun
                                {% endfor %}
                                </em>
                            </li>
                            <li>MÃ©diateur :
                                <em>
                                {% for mediator in promo.mediators %}
                                    {{ mediator.fullname }} &nbsp;
                                {% else %}
                                    Aucun
                                {% endfor %}
                                </em>
                            </li>
                        </ul>
                        <hr>
                        <span class="text-grey">{{ promo.nickname | capitalize }}</span>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="text-center">
        <a href="{{ path('promo_other') }}" class="text-grey bhover">Utilisateurs sans promotion <i class="fal fa-directions"></i></a>
    </div>
</div>
{% endblock %}
