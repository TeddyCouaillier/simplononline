{% extends 'base.html.twig' %}
{% import 'macro.html.twig' as template %}

{% block title %}Modification des données de {{ user }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    {{ template.checkMessage(form) }}
    <h1>Modification des données</h1>
    <p class="text-small main-breadcrumb">
        <a href="{{ path('account_show') }}">Accueil</a> &nbsp; / &nbsp;
        <a href="{{ path('admin_all_users') }}">Tous les utilisateurs</a> &nbsp; / &nbsp;
        <span>Données de {{ user }}</span>
    </p>
    <hr>
    {{ form_start(form) }}
    {% for form in form.userData %}
        <div class="container-white p-0 row shadow-small flex align-center my-1">
            <div class="col-lg-6 col-md-6 col-sm-6">{{ user.userData[loop.index-1].data.label }}</div>
            <div class="col-lg-6 col-md-6 col-sm-6">{{ form_widget(form) }}</div>
        </div>
    {% endfor %}
    {{ template.confirm() }}
    {{ form_end(form) }}
{% endblock %}

{% block modal %}{% endblock %}