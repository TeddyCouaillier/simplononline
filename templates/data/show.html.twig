{% extends 'base.html.twig' %}

{% block title %}Données de {{ user.fullname }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/data.css">
{% endblock %}

{% block body %}
    <h1>Mes données</h1>
    <hr>
    {% for udata in user.userData %}
        <div class="container-white row flex align-center mx-0 my-1 py-3 shadow-small">
            <div class="col-md-6 bold">
                {{ udata.data.label }}
            </div>
            <div class="col-md-4 data-link-{{udata.id}}">
                {% if udata.content != null %}
                {{ udata.content }}
                {% else %}
                <em>Pas de données</em>
                {% endif %}
            </div>
            <div class="col-md-2">
                <i class="fal fa-file-signature copy" onclick="copyToClipboard('.data-link-{{udata.id}}')"
                data-toggle="tooltip" data-placement="top" title="Copier la donnée"></i>
            </div>
        </div>
    {% endfor %}
{% endblock %}